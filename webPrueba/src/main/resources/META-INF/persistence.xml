<?xml version="1.0" encoding="utf-8"?>
<persistence version="2.0"
			 xmlns="http://java.sun.com/xml/ns/persistence"
			 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

	<persistence-unit name="webMongo-PU-JTA" transaction-type="JTA">
		<provider>org.hibernate.ogm.jpa.HibernateOgmPersistence</provider>

		<class>com.simavirtual.Person</class>
		<class>com.simavirtual.Hike</class>
		<class>com.simavirtual.HikeSection</class>

		<properties>
			<property name="hibernate.ogm.datastore.provider" value="mongodb" />
			<property name="hibernate.ogm.datastore.database" value="WebMongoDB" />
			<property name="hibernate.ogm.datastore.create_database" value="true" />

			<property name="hibernate.search.lucene_version" value="LUCENE_36"/>
		</properties>
	</persistence-unit>
</persistence>